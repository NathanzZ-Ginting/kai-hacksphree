{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2020",                 // cukup aman untuk Node modern
    "module": "nodenext",               // biar support ESM
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],                  // supaya bisa pakai Node built-in types
    // "allowImportingTsExtensions": true, // penting buat NodeNext

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"]
}